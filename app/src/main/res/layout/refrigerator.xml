<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/kitchen"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/kitchen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        tools:layout_editor_absoluteX="37dp" />

    <RelativeLayout
        android:id="@+id/iconLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.99"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/cooking"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cooking" />


        <ImageButton
            android:id="@+id/refrigerator"
            android:layout_width="60dp"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/refrigerator" />

        <ImageButton
            android:id="@+id/insta"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/share" />


        <TextView
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/refrigerator"
            android:layout_marginLeft="20dp"

            android:fontFamily="@font/eun"
            android:text="@string/main_insert"
            android:textColor="#FF9800"
            android:textSize="16sp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cooking"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/eun"
            android:text="@string/main_find"
            android:textColor="#FF9800"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cooking"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:fontFamily="@font/eun"
            android:text="공유하기"
            android:textColor="#FF9800"
            android:textSize="16sp"
            tools:ignore="NotSibling" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>